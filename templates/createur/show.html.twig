{% extends 'base.html.twig' %}

{% block title createur.title %}

{% block body %}
<div class="jumbotron">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
            
            </div>
            <div class="col-md-4">
                <h1>{{ createur.title }}</h1>
                <h2>{{ createur.description }}<h2>
                <div class="text-dark">{{ createur.ville}}</div>
                <a href="#" class="btn btn-secondary">Contacter le créateur</a>
            </div>
        </div>
    </div>
</div>

<div class="container mt-4">

            <p>
                {{ createur.description | nl2br }}
            </p>
            <div class="row">
                <div class="col-md-4">
                    <h2>Cordonnées</h2>
                    <table class="table table-striped">
                        <tr>
                            <td>Mini descriptif</td>
                            <td>{{ createur.minidescriptif }} </td>
                        </tr>
                        <tr>
                            <td>mail</td>
                            <td>{{ createur.email }}</td>
                        </tr>
                        <tr>
                            <td>Telephone</td>
                            <td>{{ createur.telephone }}</td>
                        </tr>
                        <tr>
                            <td>Facebook</td>
                            <td>{{ createur.facebook }}</td>
                        </tr>
                        <tr>
                            <td>Twitter</td>
                            <td>{{ createur.twitter }}</td>
                        </tr>
                    </table>
                </div>
               <div class="col-md-8" display= "inline" >
               <h2>Réalisations</h2>
               <div class="row">
               {% if createur.images %}
        {% for image in createur.images %}
            <div class="col-md-4" >
            
                <img src="{{ asset('/uploads/' ~ image.name) }}" alt="card-img-top" width="200px" >
                <p></p>
            </div>    
        {% endfor %} 
    {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

