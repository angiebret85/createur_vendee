{% extends 'base.html.twig' %}

{% block title 'Recherche créateurs' %} 

{% block body %}
<div class="jumbotron">
    <div class="container">
        {{ form_start(form) }}
        <div class="form-row align-items-end">
            <div class="col">
                {{ form_row(form.codePostalSearch) }}
            </div>
            <div class="col">
                {{ form_row(form.villeSearch) }}
            </div>
            <div class="form-group">
                <button class="btn btn-primary">Rechercher</button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</div>
<div class="container mt-4">
    <h1>Les créateurs par recherche<h1>

    <div class="row">
        {% for createur in createurs %}
            <div class="col-md-4">
                {% include "createur/_createur.html.twig" %}
            </div>
        {% endfor %}
    </div>

    <div class="pagination">
        {{ knp_pagination_render(createurs) }}
    </div>
</div>
{% endblock %}
