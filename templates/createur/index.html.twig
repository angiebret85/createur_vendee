{% extends 'base.html.twig' %}

{% block title 'Recherche créateurs' %} 

{% block body %}
<div class="jumbotron">
    <div class="container">
        {{ form_start(form) }}
        <div class="form-row align-items-end" style="display: inline-block;">
        <div class="row">
            <div class="col-md-4">
                {{ form_row(form.codePostalSearch) }} 
            </div>
            <div class="col-md-8">
                {{ form_row(form.villeSearch) }}
            </div>
            </div>
            <div class="row">
                <div class="col">
                    {{ form_label(form.categories, 'Choissisez une ou plusieurs catégories') }}
                    {{ form_widget(form.categories) }}
                </div>
            </div>
            <div class="row">
                <div class ="col">
                    {{ form_row(form.address, {'id': 'search_address'}) }}
                </div>
            </div>    
            <div class="row">    
                <div class="col">
                    {{ form_label(form.distance, 'Choissisez une distance') }}
                    {{ form_row(form.distance) }}
                </div>
            </div>
            <div class="form-group">
                <button class="btn btn-primary">Rechercher</button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</div>
<div class="container mt-4">
    <h1>Les créateurs par recherche<h1>

    <div class="row">
        {% for createur in createurs %}
            <div class="col-md-4">
                {% include "createur/_createur.html.twig" %}
            </div>
        {% endfor %}
    </div>

    <div class="pagination">
        {{ knp_pagination_render(createurs) }}
    </div>
</div>
{% endblock %}
