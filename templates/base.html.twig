    <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
            <a class="navbar-brand" href="{{ path('home') }}">Créateurs de Vendée</a>
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('createur.index') }}">Recherche par critères</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('createur.geolocalisation') }}">Géolocalisation des créateurs</a>
                </li>
            </ul>
            {% if app.user %}
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="{{ path('logout')}}" class="nav-link">Se déconnecter</a>
                </li>
            </ul>
            {% endif %}
