{{ form_start(form) }}
    <div class="row">
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-4">{{ form_row(form.title) }}</div>
                <div class="col-md-4">{{ form_row(form.nom) }}</div>
                <div class="col-md-4">{{ form_row(form.prenom) }}</div>
            </div>
        </div>
    </div>
    <div class="row">  
        <div class="col-md-4">{{ form_row(form.minidescriptif) }}</div>
        <div class="col-md-8">{{ form_row(form.description) }}</div>
    </div>
    <div class="row">
        <div class="col-md-4">{{ form_row(form.adresse) }}</div>
        <div class="col-md-4">{{ form_row(form.codepostal) }}</div>
        <div class="col-md-4">{{ form_row(form.ville) }}</div>
    </div>
    <div class="row">
        <div class="col-md-6">{{ form_row(form.lat) }}</div>
        <div class="col-md-6">{{ form_row(form.lng) }}</div>
    </div>
    <div class="row">
        <div class="col-md-4">{{ form_row(form.telephone) }}</div>
        <div class="col-md-4">{{ form_row(form.email) }}</div>
        <div class="col-md-4">{{ form_row(form.facebook) }}</div>
    </div>
    <div class="row">
        <div class="col-md-4">{{ form_row(form.instagram) }}</div>
        <div class="col-md-4">{{ form_row(form.twitter) }}</div>
        <div class="col-md-4">{{ form_row(form.internet) }}</div>
    </div>
    {{ form_rest(form) }}
    <div class="col">
            <div class="row flex">
                {# VÃ©rifier si la route est "admin.createur.edit" on affiche les images #}
                {#% if app.request.attributes.get('_route') == 'admin.createur.edit' %#}
                    {% for image in createur.images %}
                    <div class="col" style="width: 100px; flex: none; margin: 5px;">
                        <img src="{{ asset('/uploads/' ~ image.name) }}" alt="Image" width="100px">
                        <a href="{{ path('admin.createur.delete.image', {'id': image.id}) }}" class="btn btn-danger" data-delete data-token="{{ csrf_token('delete' ~ image.id) }}">Supprimer</a>
                    </div>
                    {% endfor %}    
                {#% endif %#}
            </div>
        </div>
    
    <button class="btn btn-secondary">{{ button|default('Enregistrer') }}</button>
    {{ form_end(form) }}